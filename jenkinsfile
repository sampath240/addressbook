pipeline {
    agent any
    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                  }
                }
              }
              stage('Publish') {
                 steps{
                     nexusPublisher nexusInstanceId: 'admin', nexusRepositoryId: 'first', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: 'addressbook_main/target/addressbook.war']], mavenCoordinate: [artifactId: 'addressbook', groupId: 'com.edurekademo.tutorial', packaging: 'war', version: '1.1.1']]]
             } 
        }
    } 
}
