pipeline {
    agent any
    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
              }
            }
        stage('Publish') {
            steps {
               nexusPublisher nexusInstanceId: 'http://35.196.202.70:8081', nexusRepositoryId: 'releases', packages: [[$class: 'MavenPackage', mavenAssetList: [[classifier: '', extension: '', filePath: 'war/target/jenkins.war']], mavenCoordinate: [artifactId: 'addressbook.war', groupId: 'org.jenkins-ci.main', packaging: 'war', version: '2.23']]]
            }
        }
    } 
}
